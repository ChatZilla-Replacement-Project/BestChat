<UserControl xmlns="https://github.com/avaloniaui"
						xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						xmlns:ctrls="using:BestChat.Platform.UI.Desktop"
						xmlns:data="using:BestChat.Platform.UI.Desktop.Prefs"
						x:DataType="data:GlobalAppearanceFontsOneFontBlockPrefs"
						mc:Ignorable="d"
						x:Class="BestChat.Platform.UI.Desktop.Prefs.Pages.GlobalAppearanceFontsOneFontBlock">
	<Grid ColumnDefinitions="Auto,4,1*"
				RowDefinitions="Auto,4,Auto,4,Auto,4,Auto,4,Auto">
		<TextBlock Classes="InfoTextBlock"
							Text="Normally, Best Chat gets font information from your theme.  However, here you can change the font used."/>
		<Label Grid.Row="2"
					Content="Normal Font Family:"
					HorizontalContentAlignment="Right"/>
		<ctrls:FontSelectionComboBox Grid.Row="2"
																Grid.Column="2"
																ListOnlyFixedWidthFonts="False"
																SelectedItem="{Binding NormalFontFamily.OverriddenVal}"/>
		<Label Grid.Row="2"
					HorizontalContentAlignment="Right"
					Content="Fixed Width Family:"/>
		<ctrls:FontSelectionComboBox Grid.Row="2"
																Grid.Column="2"
																ListOnlyFixedWidthFonts="True"
																SelectedItem="{Binding FixedWidthFontFamily.OverriddenVal}">
		</ctrls:FontSelectionComboBox>
	</Grid>
</UserControl>